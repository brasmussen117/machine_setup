# zsh config
alias zshconfig="$EDITOR ~/.zshrc"

# vim config
alias vimconf="$EDITOR ~/.vimrc"

# nvim config
alias nvimconf="$EDITOR ~/.config/nvim/init.lua"

# directory
alias rm="rm -i"
alias l="ls -lAh"
alias la="ls -lah"

# git
alias gan="git add --intent-to-add" # tell git to track an untracked file without committing it
alias grbif="git rebase -i @^^" # shortcut for doing fixup rebase after manually committing a fix
alias gcaf="git commit -v -a --fixup" # automatically make a fixup commit from current dirty files
alias grbia="git rebase -i --autosquash" # automatically fixup the commit made above
alias gbrd="git removed-branches" # plugin: report on dangling branches (branches whose remote was deleted)
alias gbrD="git removed-branches --prune" # plugin: actually remove (fully-merged) dangling branches
alias gsync="git fetch --all --prune; git removed-branches" # fetch from remote and report on dangling branches
alias gbtree="git log --graph --simplify-by-decoration --pretty=format:'%d' --all" # show a graph of all branches (and tags)
alias gbt="git log --graph --simplify-by-decoration --pretty=format:'%d' --all" # show a graph of all branches (and tags)
alias gtdl="git tag -l | xargs git tag -d; git pull" # DANGEROUS: delete all local tags and pull; useful if someone else changes tags
alias glf="git log development.. --oneline --decorate" # show commits on current branch on top of development

# # composer
# alias cdump="composer dump-autoload"
# alias crequire="composer require"

# python unit testing
alias pyt="pytest"
alias pytw="ptw ."
alias pyta="pytest . -n auto -k \"not functional\""
alias pytan="pytest . -n auto -k \"not functional\""
alias pytaf="pytest . -k \"functional\""

# test coverage
alias pytc="./scripts/coverage_tests.sh all_tests && \
    firefox ./.hybels_coverage_html_report/index.html"
alias pytsc="./scripts/coverage_tests.sh all_tests_lt_100 && \
    firefox ./.hybels_coverage_html_report/index.html"

alias pytch="firefox ./.hybels_coverage_html_report/index.html"

# pipenv
alias venv="pipenv shell"
alias pshell="pipenv shell"
alias psh="pipenv shell"
alias prun="pipenv run"
alias pinstall="pipenv install"
alias plock="pipenv lock"
alias psync="pipenv sync"
alias psynd="pipenv sync --dev"
alias pmgr="pipenv run python manage.py runserver"

# Django management
alias mg="python manage.py"
alias mgm="python manage.py migrate"
alias mgmm="python manage.py makemigrations"
alias mgr="python manage.py runserver"
alias mgml="python manage.py showmigrations --list | grep -v '\[X\]'" # display migrations that have not been applied

# misc aliases
alias fix="~/.screenlayout/layout.sh"
alias dbas="cd /home/brenden/repos/dbaseweb/"
alias o2g="cd /home/brenden/repos/hybelso2g/"
alias o3g="cd /home/brenden/repos/django3g/"
alias bak="cd /home/brenden/backups/"
alias bakd="cd /home/brenden/backups/dbase/"
alias bako="cd /home/brenden/backups/o3g/"
alias tmp="cd /home/brenden/tmp/"
alias aliases="$EDITOR /home/brenden/.aliases"
alias sshconfig="$EDITOR /home/brenden/.ssh/config"
alias functions="$EDITOR /home/brenden/scripts/myscripts/"
alias sshlog="grep sshd /var/log/auth.log | less"
alias spsql="sudo -u postgres psql"
alias pgrd="pg_restore -h localhost -U dbase -d dbase -c --if-exists"
alias pgro="pg_restore -h localhost -U o3g -d o3g -c --if-exists"
alias odsync="onedrive --confdir ~/.config/onedrive/ --synchronize;\
 onedrive --confdir ~/.config/onedrive__IT_Requests/ --synchronize"
alias clr="clear"
alias dbas-logs="cd /home/brenden/tmp/logs/dbase/; scp dbase:~/dbaseweb/logs/debug.log\* ."
alias sai="sudo apt install"
alias sar="sudo apt remove"
alias upgrade="sudo apt update; sudo apt upgrade -y; sudo apt autoremove"
alias saup="sudo apt update; sudo apt upgrade -y"
alias ez="exec zsh"
alias x="exit"

