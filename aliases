# python unit testing
alias pyt="pytest"
alias pytl="pytest -fqx --color=yes"
alias pytw="ptw . --clear -qx --lf --ff --nf"
alias pyta="pytest . -q -n auto"
alias pytan="pytest . -q -n auto -k \"not functional\""
alias pytaf="pytest . -q -n 2 -k \"functional\""
alias pytal="pytest . -fqx -n auto --color=yes"

# test coverage
alias pytc="./scripts/coverage_tests.sh all_tests && \
    firefox ./.hybels_coverage_html_report/index.html"
alias pytsc="./scripts/coverage_tests.sh all_tests_lt_100 && \
    firefox ./.hybels_coverage_html_report/index.html"

alias pytch="firefox ./.hybels_coverage_html_report/index.html"

