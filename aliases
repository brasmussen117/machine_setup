# zsh config
alias zshconfig="$EDITOR ~/.zshrc"

# vim config
alias vimconf="$EDITOR ~/.vimrc"

# nvim config
alias nvimconf="$EDITOR ~/.config/nvim/init.lua"

# directory
alias rm="rm -i"
alias l="ls -lAh"
alias la="ls -lah"

# git
alias gso="git switch"
alias gci="git commit -v"
alias gaac="git add --all; git commit -v;"
alias gcaf="git commit -v -a --fixup"
alias grb="git rebase"
alias ga="git add"
alias gaa="git add --all"
alias gap="git add -p"
alias gan="git add -N"
alias gs="git status"
alias gb="git branch"
alias gd="git diff"
alias gdc="git diff --cached"
alias gl="git l"
alias gll="git ll"
alias gp="git push"
alias gm="git merge"
alias gmf="git merge --ff-only"
alias gpl="git pull"
alias gbv="git branch -v"
alias gpr="git remote prune origin"
alias gr="git remote -v"
alias grbif="git rebase -i @^^"
alias grbia="git rebase -i --autosquash"
alias grd="git push origin --delete"

alias gbtree="git log --graph --simplify-by-decoration --pretty=format:'%d' --all"
alias gltree="git log --graph --oneline --decorate --all"
alias glf="git log development.. --oneline --decorate"
alias gpt="git push origin --tags"
alias gta="git tag -a"
alias gcf="git commit -v --fixup"
alias gsod="git switch development"
alias gsom="git switch master"
alias gsob="git switch -"
alias gstu="git stash push -u"
alias gplr="git pull --rebase"
alias gpra="git switch master;git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -d"
alias gbrd="git removed-branches"
alias gbrD="git removed-branches --prune"

